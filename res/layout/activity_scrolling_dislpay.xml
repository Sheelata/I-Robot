<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    tools:context=".ScrollingDislpay" >
<ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/procidure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Procedure_scrolling_dislpay" />
 
            

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/preapringmatrix1" />
            
            
            
             <TextView
                android:id="@+id/apparetus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/PreparingMatrix_scrolling_dislpay" />
             
               <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/preapringmatrix2" />
             
            
               <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/connectshiftresistance" />
               <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/connectshiftresistance" />
               
              <TextView
                android:id="@+id/apparetus3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Code_scrolling_dislpay" />
              
              
              
               
             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.57"
                android:orientation="horizontal" >
                      <Button
                android:id="@+id/BtnBack"
                android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               
                android:background="#002761"
                 android:text="Back" />
         <Button
                android:id="@+id/ExitBtn"
                android:layout_width="wrap_content"
                 android:layout_height="wrap_content" 
                 android:layout_weight="1"
                android:background="#002761"
                  android:text="Exit" />
            </LinearLayout>
            
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
